    <script>
      $(document).ready(function() {
        // Form submission with AJAX for Nodemailer
        $('#contactForm').submit(function(e) {
          e.preventDefault();
          
          const formData = {
            name: $('#name').val(),
            email: $('#email').val(),
            phone: $('#phone').val(),
            subject: $('#subject').val(),
            message: $('#message').val(),
            newsletter: $('#newsletter').is(':checked')
          };
          
          $.ajax({
            type: 'POST',
            url: '/send-email',
            data: formData,
            success: function(response) {
              $('#form-response').html('<div class="alert alert-success">Thank you for your message! We will get back to you soon.</div>');
              $('#contactForm')[0].reset();
            },
            error: function(error) {
              $('#form-response').html('<div class="alert alert-danger">Sorry, there was an error sending your message. Please try again later.</div>');
            }
          });
        });
      });
    </script>
